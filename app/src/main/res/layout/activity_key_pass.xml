<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".KeyPassActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_above="@id/numpad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="aa"
        android:password="false"
        android:textSize="40dp"
        android:gravity="center"/>

    <LinearLayout
        android:padding="30dp"
        android:background="@drawable/keypad"
        android:id="@+id/numpad"
        android:paddingVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/num1"
                    android:text="1"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/num2"
                    android:text="2"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/num3"
                    android:text="3"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/num4"
                    android:text="4"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/num5"
                    android:text="5"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/num6"
                    android:text="6"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/num7"
                    android:text="7"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/num8"
                    android:text="8"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/num9"
                    android:text="9"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/del"
                    android:text="del"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/num0"
                    android:text="0"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/enter"
                    android:text="OK"
                    android:textSize="30dp"
                    android:textColor="#B6985C"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#162f2b"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>